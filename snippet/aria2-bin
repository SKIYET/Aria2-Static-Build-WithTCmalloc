ARIA2_BIN() {
    cd $ARIA2_CODE_DIR/src
    $STRIP aria2c
    mkdir -p $OUTPUT_DIR
    cp aria2c $OUTPUT_DIR
}

ARIA2_PACKAGE() {
    cd $ARIA2_CODE_DIR/src
    $STRIP aria2c
    cp /etc/ssl/certs/ca-certificates.crt ca-certificates.crt
    mkdir -p $OUTPUT_DIR
    tar zcvf $OUTPUT_DIR/aria2-static-linux-$ARCH.tar.gz aria2c ca-certificates.crt
}

ARIA2_INSTALL() {
    cd $ARIA2_CODE_DIR
    make install-strip
}
